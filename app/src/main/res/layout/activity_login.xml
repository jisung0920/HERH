<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.jisung.herh.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chose_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/loginBtnOn"
            android:onClick="onClick"
            android:text="사용자" />

        <Button
            android:id="@+id/chose_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/loginButton"
            android:onClick="onClick"
            android:text="사업자" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:src="@drawable/hers_logo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.6">

        <LinearLayout
            android:id="@+id/screen_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.gms.common.SignInButton

                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/screen_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:textColor="@color/text"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:text="Code :"/>
                <EditText
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:layout_weight="3.8"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:maxLines="1"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/loginBtnOn"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="20dp"
                android:text="시작하기" />

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
