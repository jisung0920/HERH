<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:weightSum="60">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/loginButton"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="예약확인"

                android:textColor="@color/textW"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/hers_main_logo_2"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/text"
            android:id="@+id/store_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="가게명"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/text"
            android:gravity="center_vertical"
            android:id="@+id/team_Infor"
            android:text="학회 알파"
            android:textSize="15dp"
            android:layout_weight = "1"/>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/xml_border"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:padding="10dp"
        android:weightSum="20">
        <TextView
            android:textColor="@color/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="인원"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:textColor="@color/text"
            android:gravity="center_vertical"
            android:id="@+id/peo_Infor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="15명+3"
            android:textSize="15dp"
            android:layout_weight = "10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="20">
        <TextView
            android:textColor="@color/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="시간"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:id="@+id/date_Infor"
            android:text="날짜"
            />
        <TextView
            android:textColor="@color/text"
            android:gravity="center"
            android:id="@+id/time_Infor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="몇시 몇분"
            android:textSize="15dp"
            android:layout_weight = "7"/>

    </LinearLayout>


    <LinearLayout
        android:background="@drawable/xml_border"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="20">
        <TextView
            android:textColor="@color/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="연락처"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/text"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:id="@+id/phone_Infor"
            android:text="01089519523"
            android:textSize="15dp"
            android:layout_weight = "10"/>
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"

        android:layout_weight="10">
        <Button
            android:textColor="@color/textW"
            android:layout_margin="3dp"
            android:background="@color/loginBtnOn"
            android:id="@+id/yes"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="예약"/>
        <Button
            android:textColor="@color/textW"
            android:layout_margin="3dp"
            android:background="@color/loginBtnOn"
            android:id="@+id/no"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="취소"/>
    </LinearLayout>
</LinearLayout>